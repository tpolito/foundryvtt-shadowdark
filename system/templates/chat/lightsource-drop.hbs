<div
	class="shadowdark chat-card light-source-card"
	data-actor-id="{{data.actor.id}}"
	{{#if tokenId}}
		data-token-id="{{tokenId}}"
	{{/if}}
>
	<header class="card-header flexrow">
		<img
			src="{{item.img}}"
			{{#if picked_up}}
				data-tooltip="{{name}} {{localize 'SHADOWDARK.chat.light_source.source.picked_up'}}"
			{{else}}
				data-tooltip="{{name}} {{localize 'SHADOWDARK.chat.light_source.source.dropped'}}"
			{{/if}}
		/>
		<h3 class="light-source-name">
			{{name}}
			{{#if picked_up}}
				{{localize "SHADOWDARK.chat.light_source.source.picked_up"}}
			{{else}}
				{{localize "SHADOWDARK.chat.light_source.source.dropped"}}
			{{/if}}
		</h3>
	</header>
	<div class="light-source {{#if active}}on{{else}}off{{/if}}">
		<h4>
			{{#ifCond timeRemaining '<' 1}}
				{{localize "SHADOWDARK.chat.light_source.seconds_remaining"}}
			{{else}}
				{{timeRemaining}} {{localize "SHADOWDARK.chat.light_source.remaining"}}
			{{/ifCond}}
		</h4>
	</div>
</div>
