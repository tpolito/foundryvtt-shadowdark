<div
	class="shadowdark chat-card roll-card"
	data-actor-id="{{data.actor.id}}"
	{{#if tokenId}}
		data-token-id="{{tokenId}}"
	{{/if}}
>
	<header class="card-header flexrow">
		<img src="{{data.actor.img}}" data-tooltip="{{title}}"/>
		<h3 class="roll-name">{{title}}</h3>
	</header>
	<div class="roll card-roll blindable" data-blind="{{data.rolls.main.blind}}">
		{{#if data.rolls.main}}
			<div>{{{data.rolls.main.renderedHTML}}}</div>
		{{/if}}
	</div>
	<div class="card-buttons hp">
		<button data-action="apply-hp-to-max" data-value="{{data.rolls.main.roll.result}}">
			{{localize "SHADOWDARK.chat.hp_roll.apply_to_max"}}
		</button>
	</div>
</div>
