<p>
	<b>{{localize 'SHADOWDARK.item.weapon_type'}}</b> <em>{{fromConfig "WEAPON_TYPES" item.system.type}}</em>
</p>
<p>
	<b>{{localize 'SHADOWDARK.item.weapon_range'}}</b> <em>{{fromConfig "RANGES" item.system.range}}</em>
</p>
{{#if item.system.damage.oneHanded}}
	<p>
		<b>{{localize 'SHADOWDARK.item.weapon_damage.oneHanded'}}</b> <em>{{fromConfig "WEAPON_BASE_DAMAGE" item.system.damage.oneHanded}}</em>
	</p>
{{/if}}
{{#if item.system.damage.twoHanded}}
	<p>
		<b>{{localize 'SHADOWDARK.item.weapon_damage.twoHanded'}}</b> <em>{{fromConfig "WEAPON_BASE_DAMAGE" item.system.damage.twoHanded}}</em>
	</p>
{{/if}}
<p>
	{{#if item.system.baseWeapon}}
	<b>{{localize 'SHADOWDARK.item.weapon.base_weapon.title'}}</b> <em>{{baseItemName}}</em>
	{{/if}}
</p>
<div class="details-description">
	{{{description}}}
</div>
{{#unless item.system.stashed}}
	<button
		class="item-control"
		data-actor-id="{{actor.id}}"
		data-item-id="{{item._id}}"
		data-action="roll-attack"
	>
		{{localize 'SHADOWDARK.chat_card.button.attack'}}
	</button>
{{/unless}}
<footer class="details-footer">
	<ul class="tags">
		{{#each itemProperties}}
			<li class="tag tag_primary tag_small">
				{{this.name}}
			</li>
		{{/each}}
		{{#if item.system.stashed}}
			<li class="tag tag_secondary tag_small">
				{{localize 'SHADOWDARK.item.stashed.label'}}
			</li>
		{{/if}}
	</ul>
</footer>
